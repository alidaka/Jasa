<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/planet_detail_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/layout_loading_spinner"/>
        <TextView style="@style/Default.PageTitle" android:id="@+id/planet_name"/>
        <TextView style="@style/Default.PageDetails" android:id="@+id/planet_rotation_period"/>
        <TextView style="@style/Default.PageDetails" android:id="@+id/planet_orbital_period"/>
        <TextView style="@style/Default.PageDetails" android:id="@+id/planet_diameter"/>
        <TextView style="@style/Default.PageDetails" android:id="@+id/planet_climate"/>
        <TextView style="@style/Default.PageDetails" android:id="@+id/planet_gravity"/>
        <TextView style="@style/Default.PageDetails" android:id="@+id/planet_terrain"/>
        <TextView style="@style/Default.PageDetails" android:id="@+id/planet_surface_water"/>
        <TextView style="@style/Default.PageDetails" android:id="@+id/planet_population"/>
        <include layout="@layout/layout_header_list" android:id="@+id/planet_film_list"/>
        <include layout="@layout/layout_header_list" android:id="@+id/planet_resident_list"/>

    </LinearLayout>
</ScrollView>