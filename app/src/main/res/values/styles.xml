<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="Default" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#2f4f4f</item>
        <item name="android:gravity">left</item>
    </style>
    <style name="Default.FilmTitle">
        <item name="android:textSize">28sp</item>
        <item name="android:padding">10dp</item>
    </style>
    <style name="Default.PageTitle">
        <item name="android:textSize">28sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">left</item>
    </style>
    <style name="Default.OpeningCrawl">
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
    <style name="Default.PageDetails">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:gravity">left</item>
    </style>
    <style name="Default.SubHead">
        <item name="android:textStyle">italic</item>
        <item name="android:paddingLeft">10dp</item>
    </style>
    <style name="Default.ListHead">
        <item name="android:textSize">21sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">left</item>
    </style>
    <style name="Default.List">
        <item name="android:padding">10dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>